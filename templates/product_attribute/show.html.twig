{% extends 'base.html.twig' %}
{% import 'macro.twig' as macro %}

{% block title %}Product attribute{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col-6 ">
            {{ macro.back_btn('product_attribute') }}
        </div>
        <div class="col-6 text-right">
            {{ include('product_attribute/_delete_form.html.twig') }}
        </div>
    </div>

    <h1>Product attribute #{{ product_attribute.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product_attribute.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product_attribute.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-12 text-right">
            {{ macro.edit_btn('product_attribute', product_attribute.id) }}
        </div>
    </div>

{% endblock %}
