{% extends 'base.html.twig' %}
{% import 'macro.twig' as macro %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col-6 ">
            {{ macro.back_btn('product') }}
        </div>
        <div class="col-6 text-right">
            {{ include('product/_delete_form.html.twig') }}
        </div>
    </div>

    <h1>Product #{{ product.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ product.created | format_datetime(dateFormat='short') }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ product.updated | format_datetime(dateFormat='short')}}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-12 text-right">
            {{ macro.edit_btn('product', product.id) }}
        </div>
    </div>


{% endblock %}
