{% macro action_column(entity, id) %}

    <form method="post" action="{{ path(entity ~ '_delete', {'id': id}) }}"
          onsubmit="return confirm('Are you sure you want to delete this item?');">

        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ id) }}">

        <div class="btn-group btn-group-sm" role="group">
            <a href="{{ path(entity ~ '_show', {'id': id}) }}" class="btn btn-outline-info" title="Show">
                <i class="fa fa-eye"></i></a>
            <a href="{{ path(entity ~ '_edit', {'id': id}) }}" class="btn btn-outline-primary" title="Edit">
                <i class="fa fa-pencil-alt"></i></a>
            <button class="btn btn-outline-danger" title="Delete">
                <i class="fa fa-times"></i>
            </button>
        </div>
    </form>

{% endmacro %}

{% macro edit_btn(entity, id) %}
    <a href="{{ path(entity ~ '_edit', {'id': id}) }}" class="btn btn-outline-success">edit</a>
{% endmacro %}

{% macro back_btn(entity) %}
    <a href="{{ path(entity ~ '_index') }}" class="btn btn-outline-info">
        <i class="fa fa-arrow-left"></i> back to list
    </a>
{% endmacro %}

